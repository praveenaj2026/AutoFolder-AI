[flake8]
# Set maximum line length to 120 characters (modern standard)
max-line-length = 120

# Ignore specific rules
ignore = 
    E501,  # Line too long (handled by max-line-length)
    E722,  # Bare except (we use these intentionally for broad error handling)
    W503,  # Line break before binary operator (outdated rule)
    E203,  # Whitespace before ':' (conflicts with Black formatter)

# Exclude common directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .vscode,
    logs

# Per-file ignores (if needed)
per-file-ignores =
    __init__.py:F401  # Ignore unused imports in __init__ files
